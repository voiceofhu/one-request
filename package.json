{
  "name": "one-request",
  "displayName": "One Request",
  "description": "One Request for Visual Studio Code",
  "version": "26.228.1511",
  "publisher": "huzhihui",
  "author": {
    "name": "huzhihui",
    "email": "onerequest@huzhihui.com"
  },
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huzhihui/one-request/issues",
    "email": "onerequest@huzhihui.com"
  },
  "homepage": "https://github.com/huzhihui/one-request/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/huzhihui/one-request.git"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "REST",
    "Http",
    "GraphQL",
    "multi-root ready"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension",
  "contributes": {
    "languages": [
      {
        "id": "http",
        "aliases": [
          "HTTP",
          "Http",
          "http"
        ],
        "extensions": [
          ".http",
          ".rest"
        ],
        "firstLine": "^(GET|POST|PUT|DELETE|PATCH|HEAD|OPTIONS|CONNECT|TRACE|LOCK|UNLOCK|PROPFIND|PROPPATCH|COPY|MOVE|MKCOL|MKCALENDAR|ACL|SEARCH)\\s+(.*?)HTTP/[0-9\\.]+$",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "http",
        "scopeName": "source.http",
        "path": "./syntaxes/http.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "http",
        "path": "./snippets/http.json"
      }
    ],
    "commands": [
      {
        "command": "one-request.request",
        "title": "Send Request",
        "category": "One Request"
      },
      {
        "command": "one-request.rerun-last-request",
        "title": "Rerun Last Request",
        "category": "One Request"
      },
      {
        "command": "one-request.cancel-request",
        "title": "Cancel Request",
        "category": "One Request"
      },
      {
        "command": "one-request.switch-environment",
        "title": "Switch Environment",
        "category": "One Request"
      },
      {
        "command": "one-request.history",
        "title": "View Request History",
        "category": "One Request"
      },
      {
        "command": "one-request.clear-history",
        "title": "Clear Request History",
        "category": "One Request"
      },
      {
        "command": "one-request.save-response",
        "title": "Save Full Response",
        "icon": {
          "light": "./images/save.svg",
          "dark": "./images/save-inverse.svg"
        },
        "category": "One Request"
      },
      {
        "command": "one-request.save-response-body",
        "title": "Save Response Body",
        "icon": {
          "light": "./images/save-body.svg",
          "dark": "./images/save-body-inverse.svg"
        },
        "category": "One Request"
      },
      {
        "command": "one-request.copy-response-body",
        "title": "Copy Response Body",
        "icon": {
          "light": "./images/copy.svg",
          "dark": "./images/copy-inverse.svg"
        },
        "category": "One Request"
      },
      {
        "command": "one-request.generate-codesnippet",
        "title": "Generate Code Snippet",
        "category": "One Request"
      },
      {
        "command": "one-request.copy-codesnippet",
        "title": "Copy Code Snippet",
        "icon": {
          "light": "./images/copy.svg",
          "dark": "./images/copy-inverse.svg"
        },
        "category": "One Request"
      },
      {
        "command": "one-request.copy-request-as-curl",
        "title": "Copy Request As cURL",
        "category": "One Request"
      },
      {
        "command": "one-request.clear-aad-token-cache",
        "title": "Clear Azure AD Token Cache",
        "category": "One Request"
      },
      {
        "command": "one-request.clear-cookies",
        "title": "Clear cookies",
        "category": "One Request"
      },
      {
        "command": "one-request.fold-response",
        "title": "Fold Response",
        "category": "One Request"
      },
      {
        "command": "one-request.unfold-response",
        "title": "Unfold Response",
        "category": "One Request"
      },
      {
        "command": "one-request.preview-html-response-body",
        "title": "HTML Preview",
        "category": "One Request"
      },
      {
        "command": "one-request.show-raw-response",
        "title": "Raw",
        "category": "One Request"
      },
      {
        "command": "one-request.import-swagger",
        "title": "Import from file",
        "category": "One Request"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "one-request.fold-response",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "one-request.unfold-response",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "one-request.preview-html-response-body",
          "when": "isHTMLResponse"
        },
        {
          "command": "one-request.show-raw-response",
          "when": "isHTMLResponse"
        },
        {
          "command": "one-request.save-response",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "one-request.save-response-body",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "one-request.copy-response-body",
          "when": "httpResponsePreviewFocus"
        },
        {
          "command": "one-request.copy-codesnippet",
          "when": "codeSnippetPreviewFocus"
        }
      ],
      "editor/title": [
        {
          "when": "httpResponsePreviewFocus",
          "command": "one-request.save-response",
          "group": "navigation@1"
        },
        {
          "when": "httpResponsePreviewFocus",
          "command": "one-request.save-response-body",
          "group": "navigation@2"
        },
        {
          "when": "httpResponsePreviewFocus",
          "command": "one-request.copy-response-body",
          "group": "navigation@3"
        },
        {
          "when": "httpResponsePreviewFocus",
          "command": "one-request.fold-response",
          "group": "1_one-request@1"
        },
        {
          "when": "httpResponsePreviewFocus",
          "command": "one-request.unfold-response",
          "group": "1_one-request@2"
        },
        {
          "when": "isHTMLResponse",
          "command": "one-request.preview-html-response-body",
          "group": "1_one-request@3"
        },
        {
          "when": "isHTMLResponse",
          "command": "one-request.show-raw-response",
          "group": "1_one-request@4"
        },
        {
          "when": "codeSnippetPreviewFocus",
          "command": "one-request.copy-codesnippet",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "one-request.request",
          "when": "editorTextFocus && editorLangId == http",
          "group": "one-request@1"
        },
        {
          "command": "one-request.generate-codesnippet",
          "when": "editorTextFocus && editorLangId == http",
          "group": "one-request@2"
        },
        {
          "command": "one-request.copy-request-as-curl",
          "when": "editorTextFocus && editorLangId == http",
          "group": "one-request@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "one-request.request",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorTextFocus && editorLangId == 'http'"
      },
      {
        "command": "one-request.request",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      },
      {
        "command": "one-request.rerun-last-request",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus && editorLangId == 'http'"
      },
      {
        "command": "one-request.rerun-last-request",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      },
      {
        "command": "one-request.rerun-last-request",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l",
        "when": "httpResponsePreviewFocus"
      },
      {
        "command": "one-request.cancel-request",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus && editorLangId == 'http'"
      },
      {
        "command": "one-request.cancel-request",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      },
      {
        "command": "one-request.history",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h"
      },
      {
        "command": "one-request.switch-environment",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e"
      },
      {
        "command": "one-request.generate-codesnippet",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus && editorLangId == 'http'"
      },
      {
        "command": "one-request.generate-codesnippet",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "One Request",
      "properties": {
        "one-request.followredirect": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Follow HTTP 3xx responses as redirects."
        },
        "one-request.strictSSL": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Verify peer certificates when using HTTPS."
        },
        "one-request.defaultHeaders": {
          "type": "object",
          "default": {
            "User-Agent": "one-request"
          },
          "scope": "resource",
          "description": "If particular headers are omitted in request headers, these will be added as headers for each request."
        },
        "one-request.timeoutinmilliseconds": {
          "type": "integer",
          "default": 0,
          "scope": "resource",
          "description": "Timeout in milliseconds. 0 for infinity"
        },
        "one-request.showResponseInDifferentTab": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Show response in different tab"
        },
        "one-request.requestNameAsResponseTabTitle": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Show request name as the response tab title"
        },
        "one-request.rememberCookiesForSubsequentRequests": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Remember cookies for subsequent requests"
        },
        "one-request.enableTelemetry": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Send out anonymous usage data"
        },
        "one-request.excludeHostsForProxy": {
          "type": "array",
          "default": [],
          "scope": "resource",
          "description": "Excluded hosts when using using proxy settings"
        },
        "one-request.fontSize": {
          "type": "number",
          "scope": "resource",
          "markdownDescription": "Controls the font size in pixels used in the response preview. When set to `0`, the value of `#editor.fontSize#` is used."
        },
        "one-request.fontFamily": {
          "type": "string",
          "default": null,
          "scope": "resource",
          "description": "Controls the font family used in the response preview"
        },
        "one-request.fontWeight": {
          "type": "string",
          "enum": [
            "normal",
            "bold",
            "bolder",
            "lighter",
            "100",
            "200",
            "300",
            "400",
            "500",
            "600",
            "700",
            "800",
            "900"
          ],
          "scope": "resource",
          "description": "Controls the font weight used in the response preview"
        },
        "one-request.environmentVariables": {
          "type": "object",
          "default": {
            "$shared": {}
          },
          "scope": "resource",
          "markdownDescription": "Sets the environments and custom variables belongs to it, especially the special environment name '$shared' is used to create variables shared across all the individual environments (e.g., `{\"$shared\": {\"version\": \"v1\"}, \"production\": {\"host\": \"api.example.com\"}, \"sandbox\":{\"host\":\"sandbox.api.example.com\"}}`)",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "object",
                "default": {},
                "description": "Sets the custom variables belong to this environment",
                "additionalProperties": {
                  "anyOf": [
                    {
                      "type": "string",
                      "description": "Value of the custom variable"
                    }
                  ]
                }
              }
            ]
          }
        },
        "one-request.mimeAndFileExtensionMapping": {
          "type": "object",
          "default": {},
          "scope": "resource",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              }
            ]
          },
          "markdownDescription": "Sets the custom mapping of mime type and file extension of saved response body (e.g., `{\"application/atom+xml\": \"xml\"}`)"
        },
        "one-request.previewResponseInUntitledDocument": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Preview response in untitled document if set to true, otherwise displayed in html view"
        },
        "one-request.oidcScopes": {
          "type": "array",
          "default": [],
          "scope": "resource",
          "description": "Scopes to be used by the OIDC client, default: [openid profile email]"
        },
        "one-request.oidcCertificates": {
          "type": "object",
          "default": {},
          "scope": "resource",
          "description": "Certificate paths for Oidc callback server",
          "pattern": "^(?!http(s?)://)",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "object",
                "default": {},
                "description": "Certifcate paths for Oidc callback server",
                "properties": {
                  "cert": {
                    "type": "string",
                    "description": "Absolute or relative path of Public x509 certificate"
                  },
                  "key": {
                    "type": "string",
                    "description": "Absolute or relative path of Private key"
                  },
                  "pfx": {
                    "type": "string",
                    "description": "Absolute or relative path of PKCS #12 certificate"
                  },
                  "passphrase": {
                    "type": "string",
                    "description": "[Optional] A string of passphrase for the private key or pfx"
                  }
                },
                "dependencies": {
                  "cert": [
                    "key"
                  ],
                  "key": [
                    "cert"
                  ]
                }
              }
            ]
          }
        },
        "one-request.certificates": {
          "type": "object",
          "default": {},
          "scope": "resource",
          "description": "Certificate paths for different hosts. The path can be absolute path or relative path(relative to workspace or current http file)",
          "pattern": "^(?!http(s?)://)",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "object",
                "default": {},
                "description": "Certifcate paths for specific host(e.g., foo.com, bar.org:8081), port is optional",
                "properties": {
                  "cert": {
                    "type": "string",
                    "description": "Absolute or relative path of Public x509 certificate"
                  },
                  "key": {
                    "type": "string",
                    "description": "Absolute or relative path of Private key"
                  },
                  "pfx": {
                    "type": "string",
                    "description": "Absolute or relative path of PKCS #12 certificate"
                  },
                  "passphrase": {
                    "type": "string",
                    "description": "[Optional] A string of passphrase for the private key or pfx"
                  }
                },
                "dependencies": {
                  "cert": [
                    "key"
                  ],
                  "key": [
                    "cert"
                  ]
                }
              }
            ]
          }
        },
        "one-request.suppressResponseBodyContentTypeValidationWarning": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Suppress response body content type validation"
        },
        "one-request.previewOption": {
          "type": "string",
          "enum": [
            "full",
            "headers",
            "body",
            "exchange"
          ],
          "enumDescriptions": [
            "Response headers, body and status line",
            "Response headers and status line",
            "Response body only",
            "Whole HTTP exchange including both request and response"
          ],
          "default": "full",
          "scope": "resource",
          "description": "Response preview output option"
        },
        "one-request.disableHighlightResponseBodyForLargeResponse": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Controls whether to highlight response body for response whose size is larger than limit specified by `one-request.largeResponseSizeLimitInMB`"
        },
        "one-request.disableAddingHrefLinkForLargeResponse": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Controls whether to add href link in previewed response for response whose size is larger than limit specified by `one-request.largeResponseSizeLimitInMB`"
        },
        "one-request.largeResponseBodySizeLimitInMB": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "exclusiveMinimum": true,
          "scope": "resource",
          "markdownDescription": "Set the response body size threshold of MB to identify whether a response is a so-called 'large response', only used when `one-request.disableHighlightResponseBodyForLargeResponse` and/or `one-request.disableAddingHrefLinkForLargeResponse` is set to true"
        },
        "one-request.previewColumn": {
          "type": "string",
          "enum": [
            "current",
            "beside"
          ],
          "markdownEnumDescriptions": [
            "Preview in the column of current request file",
            "previewing at the side of the current active column and the side direction depends on `workbench.editor.openSideBySideDirection` setting, either right or below the current editor column"
          ],
          "default": "beside",
          "scope": "resource",
          "description": "Response preview column option"
        },
        "one-request.previewResponsePanelTakeFocus": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Preview response panel will take focus after receiving response."
        },
        "one-request.formParamEncodingStrategy": {
          "type": "string",
          "enum": [
            "automatic",
            "never",
            "always"
          ],
          "markdownEnumDescriptions": [
            "Detecting encoding or not automatically and do the encoding job if necessary",
            "Treat provided request body as is, no encoding job will be applied",
            "Use for the scenario that `automatic` option not working properly, e.g., some special characters(`+`) are not encoded correctly"
          ],
          "default": "automatic",
          "scope": "resource",
          "markdownDescription": "Form param encoding strategy for request body of `x-www-form-urlencoded`."
        },
        "one-request.addRequestBodyLineIndentationAroundBrackets": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Add line indentation around brackets(`{}`, `<>`, `[]`) in request body when pressing enter."
        },
        "one-request.decodeEscapedUnicodeCharacters": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Decode escaped unicode characters in response body."
        },
        "one-request.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "verbose"
          ],
          "default": "error",
          "scope": "resource",
          "description": "The verbosity of logging in the REST output panel"
        },
        "one-request.enableSendRequestCodeLens": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable/disable sending request CodeLens in request file"
        },
        "one-request.enableCustomVariableReferencesCodeLens": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable/disable custom variable references CodeLens in request file"
        },
        "one-request.useContentDispositionFilename": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable/disable using filename from 'content-disposition' header, when saving response body"
        }
      }
    },
    "configurationDefaults": {
      "[http]": {
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
        }
      }
    }
  },
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch",
    "test:unit": "pnpm exec tsc -p tsconfig.test.json && node --loader ./scripts/test-esm-loader.mjs --test .test-dist/tests/**/*.test.js",
    "test": "pnpm run test:unit",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.ts\" --fix"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "fast-xml-parser": ">=5.3.8",
      "form-data": ">=4.0.4"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@szmarczak/http-timer": "^5.0.1",
    "@types/aws4": "^1.5.1",
    "@types/fs-extra": "^5.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.35",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint": "^9",
    "eslint-plugin-simple-import-sort": "^12",
    "js-yaml": "^4.1.1",
    "typescript": "^5.4.2",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "ajv": "^8.18.0",
    "applicationinsights": "^3.14.0",
    "aws-amplify": "^6.16.2",
    "aws4": "^1.9.1",
    "code-highlight-linenums": "^0.2.1",
    "combined-stream": "^1.0.5",
    "content-disposition": "^1.0.1",
    "dayjs": "^1.8.20",
    "dotenv": "^17.3.1",
    "encodeurl": "^2.0.0",
    "filesize": "^11.0.13",
    "fs-extra": "^11.3.3",
    "got": "^14.6.6",
    "highlight.js": "^11.11.1",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "httpsnippet": "^3.0.1",
    "iconv-lite": "^0.7.2",
    "jsonc-parser": "^3.3.1",
    "jsonpath-plus": "^10.4.0",
    "mime-types": "^3.0.2",
    "pretty-data": "^0.40.0",
    "sanitize-html": "^2.13.0",
    "tough-cookie": "^6.0.0",
    "tough-cookie-file-store": "^3.3.0",
    "uuid": "^13.0.0",
    "xpath": "^0.0.34",
    "yargs-parser": "^22.0.0"
  }
}
